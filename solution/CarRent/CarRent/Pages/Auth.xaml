<Page x:Class="CarRent.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRent.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox x:Name="login" Width="200"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="pwd" Width="200"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Регистрация" Width="125" Click="ToSignUp"/>
                <Button Content="Войти" Width="75" Click="SignIn" Background="LightGreen"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
